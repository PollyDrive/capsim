# CAPSIM 2.0 Environment Configuration
# Copy this file to .env and set your actual values
# DO NOT commit .env to git - it contains secrets!

# Database Configuration
POSTGRES_DB=capsim_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=change_me_in_production
CAPSIM_RW_PASSWORD=change_me_secure_rw_password
CAPSIM_RO_PASSWORD=change_me_secure_ro_password

# Application Settings
LOG_LEVEL=INFO
ENABLE_JSON_LOGS=true
ENABLE_METRICS=true

# Performance Tuning
BATCH_SIZE=100
DECIDE_SCORE_THRESHOLD=0.25
TREND_ARCHIVE_THRESHOLD_DAYS=3
BASE_RATE=86.4

# Simulation Settings
SIM_SPEED_FACTOR=60

# Security (Add when JWT is implemented)
# JWT_SECRET=change_me_very_long_random_secret_minimum_256_bits

# Grafana
GRAFANA_PASSWORD=change_me_secure_admin_password

# Development Only - Remove in Production
DOCKER_ENV=true

# Vault Integration (for production deployments)
# VAULT_ADDR=https://vault.example.com
# VAULT_TOKEN=hvs.XXXXXXXXXXXXXXXXXXXXXXXX
# VAULT_SECRET_PATH=secret/capsim
