{
  "id": null, 
  "title": "CAPSIM 2.0 Overview", 
  "tags": ["capsim", "api", "monitoring"], 
  "timezone": "browser", 
  "refresh": "30s", 
  "schemaVersion": 27, 
  "version": 1, 
  "panels": [
    {
      "id": 1, 
      "title": "HTTP Request Rate", 
      "type": "graph", 
      "targets": [
        {
          "expr": "rate(capsim_http_requests_total[5m])", 
          "legendFormat": "{{method}} {{endpoint}} ({{status}})", 
          "refId": "A"
        }
      ], 
      "xAxis": {"show": true}, 
      "yAxes": [{"label": "requests/sec", "show": true}], 
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0}
    }, 
    {
      "id": 2, 
      "title": "HTTP Request Duration", 
      "type": "graph", 
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(capsim_http_request_duration_seconds_bucket[5m]))", 
          "legendFormat": "95th percentile", 
          "refId": "A"
        }, 
        {
          "expr": "histogram_quantile(0.50, rate(capsim_http_request_duration_seconds_bucket[5m]))", 
          "legendFormat": "50th percentile", 
          "refId": "B"
        }
      ], 
      "yAxes": [{"label": "seconds", "show": true}], 
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0}
    },
    {
      "id": 3,
      "title": "Database Operations",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(capsim_db_operations_total[5m])",
          "legendFormat": "DB Ops/sec",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 0, "y": 8}
    },
    {
      "id": 4,
      "title": "Active Simulations",
      "type": "stat",
      "targets": [
        {
          "expr": "capsim_active_simulations",
          "legendFormat": "Active Sims",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 6, "y": 8}
    },
    {
      "id": 5,
      "title": "Total Agents",
      "type": "stat",
      "targets": [
        {
          "expr": "capsim_total_agents",
          "legendFormat": "Agents",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 12, "y": 8}
    },
    {
      "id": 6,
      "title": "Event Queue Size",
      "type": "stat",
      "targets": [
        {
          "expr": "capsim_event_queue_size",
          "legendFormat": "Queue Size",
          "refId": "A"
        }
      ],
      "gridPos": {"h": 4, "w": 6, "x": 18, "y": 8}
    }
  ], 
  "time": {"from": "now-1h", "to": "now"}, 
  "timepicker": {}, 
  "templating": {"list": []}, 
  "annotations": {
    "list": [
      {
        "builtIn": 1, 
        "datasource": "-- Grafana --", 
        "enable": true, 
        "hide": true, 
        "iconColor": "rgba(0, 211, 255, 1)", 
        "name": "Annotations & Alerts", 
        "type": "dashboard"
      }
    ]
  }
}
