{
  "dashboard": {
    "id": null,
    "title": "CAPSIM 2.0 - Real-time Logs & Agent Actions",
    "tags": ["capsim", "logs", "agents", "realtime"],
    "timezone": "browser",
    "refresh": "5s",
    "schemaVersion": 27,
    "version": 1,
    "panels": [
      {
        "id": 1,
        "title": "Agent Actions Stream",
        "type": "logs",
        "targets": [
          {
            "expr": "{service_name=\"app\"} |~ \"INSERT.*agent_action\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "gridPos": {
          "h": 12,
          "w": 24,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "INSERT Operations Count",
        "type": "stat",
        "targets": [
          {
            "expr": "count_over_time({service_name=\"app\"} |~ \"INSERT\" [5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 12
        }
      },
      {
        "id": 3,
        "title": "Active Agents",
        "type": "stat",
        "targets": [
          {
            "expr": "count(count by (agent_id) (count_over_time({service_name=\"app\", entity_type=\"agent\"} [5m])))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 6,
          "y": 12
        }
      },
      {
        "id": 4,
        "title": "Simulation Events",
        "type": "stat",
        "targets": [
          {
            "expr": "count_over_time({service_name=\"app\", entity_type=\"simulation\"} [5m])",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 12,
          "y": 12
        }
      },
      {
        "id": 5,
        "title": "Log Levels",
        "type": "piechart",
        "targets": [
          {
            "expr": "sum by (level) (count_over_time({service_name=\"app\"} [5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 12
        }
      },
      {
        "id": 6,
        "title": "Agent Actions by Type",
        "type": "bargauge",
        "targets": [
          {
            "expr": "sum by (action_type) (count_over_time({service_name=\"app\"} |~ \"action_type\" [5m]))",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 7,
        "title": "Database Operations Timeline",
        "type": "logs",
        "targets": [
          {
            "expr": "{service_name=\"app\"} |~ \"INSERT|UPDATE|DELETE\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": false,
          "wrapLogMessage": false,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Error Logs",
        "type": "logs",
        "targets": [
          {
            "expr": "{service_name=\"app\", level=\"ERROR\"}",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": true,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "gridPos": {
          "h": 6,
          "w": 24,
          "x": 0,
          "y": 24
        }
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
    },
    "templating": {
      "list": [
        {
          "name": "simulation_id",
          "type": "query",
          "query": "{service_name=\"app\"} |~ \"simulation_id\" | logfmt | line_format \"{{.simulation_id}}\" | dedup",
          "refresh": "time"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1, 
          "datasource": "-- Grafana --",
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    }
  }
}
