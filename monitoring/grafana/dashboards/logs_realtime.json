{
  "id": null,
  "title": "CAPSIM 2.0 - Real-time Metrics & DB Operations",
  "tags": ["capsim", "metrics", "database", "realtime"],
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 27,
  "version": 1,
  "panels": [
    {
      "id": 1,
      "title": "HTTP Requests Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(capsim_http_requests_total[5m])",
          "legendFormat": "{{endpoint}} ({{method}})",
          "refId": "A"
        }
      ],
      "yAxes": [
        {
          "label": "requests/sec",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 2,
      "title": "Active Simulations",
      "type": "stat",
      "targets": [
        {
          "expr": "capsim_simulations_active",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 3,
      "title": "Total HTTP Requests",
      "type": "stat",
      "targets": [
        {
          "expr": "sum(capsim_http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 0
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 4,
      "title": "Healthcheck Success Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(capsim_http_requests_total{endpoint=\"/healthz\",status=\"success\"}[5m])",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 12,
        "y": 4
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 5,
      "title": "Metrics Collection Rate",
      "type": "stat",
      "targets": [
        {
          "expr": "rate(capsim_http_requests_total{endpoint=\"/metrics\"}[5m])",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 4,
        "w": 6,
        "x": 18,
        "y": 4
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "reqps"
        }
      }
    },
    {
      "id": 6,
      "title": "HTTP Requests by Endpoint",
      "type": "bargauge",
      "targets": [
        {
          "expr": "sum by (endpoint) (capsim_http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 8
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "unit": "short"
        }
      }
    },
    {
      "id": 7,
      "title": "API Response Time (95th percentile)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(capsim_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "95th percentile",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.50, rate(capsim_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "50th percentile", 
          "refId": "B"
        }
      ],
      "yAxes": [
        {
          "label": "seconds",
          "show": true
        }
      ],
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 8
      }
    },
    {
      "id": 8,
      "title": "HTTP Status Codes",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (status) (capsim_http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 0,
        "y": 16
      }
    },
    {
      "id": 9,
      "title": "Request Methods",
      "type": "piechart",
      "targets": [
        {
          "expr": "sum by (method) (capsim_http_requests_total)",
          "refId": "A"
        }
      ],
      "gridPos": {
        "h": 6,
        "w": 12,
        "x": 12,
        "y": 16
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  },
  "timepicker": {
    "refresh_intervals": ["30s", "1m", "5m", "15m"]
  },
  "templating": {
    "list": []
  },
  "annotations": {
    "list": [
      {
        "builtIn": 1, 
        "datasource": "-- Grafana --",
        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  }
}
